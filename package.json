{
  "name": "bvite",
  "private": true,
  "packageManager": "pnpm@6.20.4",
  "workspaces": [
    "packages/*",
    "play"
  ],
  "scripts": {
    "dev": "pnpm -C play dev",
    "build:play": "pnpm -C play build",
    "clean:lib": "rimraf dist",
    "clean": "pnpm run clean:lib && pnpm run clean -r --stream",
    "build": "gulp --require sucrase/register/ts -f build/gulpfile.ts",
    "build:theme": "pnpm -C packages/theme-chalk run build",
    "format": "prettier --write .",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:fix": "eslint --fix . --ext .vue,.js,.ts,.jsx,.tsx",
    "prepare": "husky install",
    "test:all": "pnpm run test -r",
    "test": "echo \"Hello Bvite\" ",
    "preinstall": "sucrase-node scripts/preinstall.ts"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "Vite",
    "Vue3",
    "Component",
    "Pnpm",
    "TS"
  ],
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "eslint",
      "prettier --write"
    ]
  },
  "author": "feasin",
  "license": "MIT",
  "dependencies": {
    "@bvite/bvite-ui": "workspace:*",
    "@bvite/components": "workspace:*",
    "@bvite/theme-chalk": "workspace:*",
    "@bvite/utils": "workspace:*",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@pnpm/find-workspace-packages": "^3.1.26",
    "@pnpm/logger": "^4.0.0",
    "@pnpm/types": "^7.6.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/gulp": "^4.0.9",
    "@types/jest": "26",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.9",
    "@types/sinon": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.4",
    "@vue/compiler-sfc": "^3.2.23",
    "@vue/test-utils": "^2.0.0-rc.16",
    "babel-jest": "26",
    "chai": "^4.3.4",
    "chalk": "^4.1.2",
    "esbuild": "^0.14.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-vue": "^8.0.3",
    "fast-glob": "^3.2.7",
    "gulp": "^4.0.2",
    "husky": "^7.0.4",
    "jest": "26",
    "less": "^4.1.2",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "2.58.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-esbuild": "^4.7.2",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-vue": "6.0.0",
    "sinon": "^12.0.1",
    "sucrase": "^3.20.3",
    "ts-jest": "26",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "vue": "^3.2.21",
    "vue-jest": "^5.0.0-alpha.10"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  }
}
