{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules"]
}
