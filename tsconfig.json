{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noLib": false,
    "resolveJsonModule": true,
    "types": ["chai", "sinon", "@types/jest", "vite/client", "@types/node"],
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.ts",
    "play/**/*.ts",
    "play/**/*.d.ts",
    "packages/**/*.ts",
    "types/*.ts",
    "build/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
